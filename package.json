    "alpinejs": "^3.14.3",
    "colyseus.js": "^0.15.0",
    "debounce": "^2.2.0",
    "perfect-cursors": "^1.0.5",
    "pixi-viewport": "^5.0.3",
    "pixi.js": "^8.5.2",
    "throttle-debounce": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/alpinejs": "^3.13.10",
    "@types/eslint__js": "^8.42.3",
    "@types/throttle-debounce": "^5.0.2",
    "@vitest/coverage-v8": "^3.1.1",

{
  "name": "canopy",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "client": "vite --host",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm:client\" \"npm:server\"",
